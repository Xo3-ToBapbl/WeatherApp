mixin head(style, iconFont, appScript)
  head
    title Weather App
    meta(charset="utf-8")
    meta(
      name="viewport" 
      content="width=device-width, initial-scale=1.0"
    )
    link(rel="stylesheet" href=require(`$app/${style}`))
    link(rel="stylesheet" href=iconFont)
    script(src=require(`$app/${appScript}`) defer)