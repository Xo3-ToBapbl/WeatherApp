div.content
  div.content-toolbar
    div.menu-toolbar
      button.material-icons.menu-btn(onclick="window.location.href='#open-side-panel'") menu
      button.material-icons.theme-mode-btn(data-toggled="false" data-theme="light") light_mode
      button.material-icons.theme-mode-btn(data-toggled="true" data-theme="dark") dark_mode
    div.temperature-units-toolbar
      button.temperature-unit-btn(data-toggled="true" data-temperature-unit="celsius")
        span
          sup o
          | C
      button.temperature-unit-btn(data-toggled="false" data-temperature-unit="fahrenheit")
        span
          sup o
          | F

  section.weak-forecast
    - for (var x = 0; x < 4; x++)
      div.day-forecast
        h3.forecast-title Tomorrow
        img(src=require("../resources/images/shower.png"))
        div.day-forecast-temperature
          p.max-temperature 16
            span
              sup o
              | C
          p.min-temperature 11
            span
              sup o
              | C
    div.day-forecast
      div.lds-ring
        div
        div
        div
        div

