mixin head(style, iconFont, appScript)
  head
    title Weather App
    meta(charset="utf-8")
    meta(
      name="viewport" 
      content="width=device-width, initial-scale=1.0"
    )
    link(rel="stylesheet" href=require(`$app/${style}`))
    link(rel="stylesheet" href=iconFont)
    link(rel="icon" type="image/x-icon" href=require(`$images/favicon.ico`))
    script(src=require(`$app/${appScript}`) defer)
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyALKo4PWrOJq2ghgDlfIDBHGlF69t60N-0&libraries=places&callback=initGoogleMap" defer)